# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (원격 MySQL)
DB_ENGINE=django.db.backends.mysql
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_HOST=your-remote-db-host
DB_PORT=3306

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Flask AI Inference Server
FLASK_INFERENCE_URL=http://localhost:5000
FLASK_API_KEY=your-flask-api-key-here

# Orthanc DICOM Server
ORTHANC_URL=http://localhost:8042
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=orthanc

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=1440  # minutes (24 hours)

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Firebase Cloud Messaging (FCM) for Push Notifications
FCM_SERVER_KEY=your-fcm-server-key-here

# Patient Data Expiration (days)
PATIENT_DATA_EXPIRATION_DAYS=90

# Project Information
PROJECT_NAME=NeuroNova
PROJECT_VERSION=1.0.0
API_VERSION=v1
